<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context="com.example.btmnavigationbar.MineFragment" >

    <RelativeLayout
        android:id="@+id/mine_mypicture_background"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_mine" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_buttonLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/mine_mypicture_background"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border" >

            <Button
                android:id="@+id/btn_myinfo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_myinfo"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="个人信息"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border" >

            <Button
                android:id="@+id/btn_message"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_message"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="消息查看"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font"/>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border" >

            <Button
                android:id="@+id/btn_myactivity"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_myactivity"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="我的活动"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/mine_buttonLayout1"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border" >

            <Button
                android:id="@+id/btn_security"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_security"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="账号安全"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border" >

            <Button
                android:id="@+id/btn_mysetting"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_mysetting"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="个性设置"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
           >

            <Button
                android:id="@+id/btn_more"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:button="@null"
                android:drawableTop="@drawable/button_mine_more"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:text="更多"
                android:textColor="@drawable/bottom_txtcolor"
                android:textSize="@dimen/bottom_font"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>